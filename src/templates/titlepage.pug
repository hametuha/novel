doctype html
html(xmlns:epub="http://www.idpf.org/2007/ops")
  head
    meta(charset='utf-8')
    title=doc_title
    each style in styles
      link(rel='stylesheet' href=style)
  body.content.content--titlepage(data-direction=direction)
    section.titlepage(epub:type="titlepage")
      h1.titlepage__title
        span=title
        if subtitle
          small.titlepage__subtitle=subtitle
        small.titlepage__author=author
        if publisher
          small.titlepage__publisher=publisher
